{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["db/migrations/**/*.ts", "db/seeders/**/*.ts", "db/config/**/*.ts"],
  "exclude": ["node_modules"]
}
